{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": false,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "target": "ES2021",
    "lib": ["ES2021"],
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "noEmit": true,
    "types": ["react", "react-native"]
  },
  "include": [
    "app",
    "lib",
    "components",
    "types",
    "scripts",
    "global.d.ts",
    "declarations.d.ts"
  ]
}

